<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.chinalooke.yuwan.fragment.YueZhanFragment">

    <include layout="@layout/include_head"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20px"
        android:background="@color/line_color"/>

    <RelativeLayout
        android:id="@+id/rl_game_name"
        android:layout_width="match_parent"
        android:layout_height="95px"
        android:background="@android:color/white">

        <TextView
            style="@style/yuezhan_title"
            android:text="游戏名"/>


        <ImageView
            style="@style/yuezhan_arrow"
            android:src="@mipmap/arrow_right"/>

        <TextView
            android:id="@+id/tv_game_name"
            style="@style/yuezhan_content"
            android:text="英雄联盟"/>


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_gameimage"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/small_padding"
            android:layout_toLeftOf="@id/tv_game_name"
            android:scaleType="centerCrop"
            app:riv_oval="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20px"
        android:background="@color/line_color"/>

    <RelativeLayout
        android:id="@+id/rl_time"
        android:layout_width="match_parent"
        android:layout_height="95px"
        android:background="@android:color/white">

        <TextView
            style="@style/yuezhan_title"
            android:text="时间"/>


        <ImageView
            style="@style/yuezhan_arrow"
            android:src="@mipmap/arrow_right"/>

        <TextView
            android:id="@+id/tv_time"
            style="@style/yuezhan_content"
            android:text="2016-09-26 14:39:00"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20px"
        android:background="@color/line_color"/>

    <RelativeLayout
        android:id="@+id/rl_address"
        android:layout_width="match_parent"
        android:layout_height="95px"
        android:background="@android:color/white">

        <TextView
            style="@style/yuezhan_title"
            android:text="地址"/>


        <ImageView
            style="@style/yuezhan_arrow"
            android:src="@mipmap/arrow_right"/>

        <TextView
            android:id="@+id/tv_address"
            style="@style/yuezhan_content"
            android:text="新世纪网吧"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20px"
        android:background="@color/line_color"/>

    <RelativeLayout
        android:id="@+id/rl_people"
        android:layout_width="match_parent"
        android:layout_height="95px"
        android:background="@android:color/white">

        <TextView
            style="@style/yuezhan_title"
            android:text="人数"/>


        <ImageView
            style="@style/yuezhan_arrow"
            android:src="@mipmap/arrow_right"/>

        <TextView
            android:id="@+id/tv_people"
            style="@style/yuezhan_content"
            android:text="3"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20px"
        android:background="@color/line_color"/>

    <RelativeLayout
        android:id="@+id/rl_money"
        android:layout_width="match_parent"
        android:layout_height="95px"
        android:background="@android:color/white">

        <TextView
            style="@style/yuezhan_title"
            android:text="金额"/>


        <ImageView
            style="@style/yuezhan_arrow"
            android:src="@mipmap/arrow_right"/>

        <TextView
            android:id="@+id/tv_money"
            style="@style/yuezhan_content"
            android:text="100元"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20px"
        android:background="@color/line_color"/>

    <RelativeLayout
        android:id="@+id/rl_friend"
        android:layout_width="match_parent"
        android:layout_height="95px"
        android:background="@android:color/white">

        <TextView
            style="@style/yuezhan_title"
            android:text="指定好友"/>


        <ImageView
            style="@style/yuezhan_arrow"
            android:src="@mipmap/arrow_right"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20px"
        android:background="@color/line_color"/>

    <RelativeLayout
        android:id="@+id/rl_rule"
        android:layout_width="match_parent"
        android:layout_height="95px"
        android:background="@android:color/white">

        <TextView
            style="@style/yuezhan_title"
            android:text="游戏规则"/>


        <ImageView
            style="@style/yuezhan_arrow"
            android:src="@mipmap/arrow_right"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"/>


</LinearLayout>
