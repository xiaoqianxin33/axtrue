<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_send_up_add_frind"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.chinalooke.yuwan.activity.SendUpAddFriendActivity">


    <include layout="@layout/include_head"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mid_padding"
        android:layout_marginTop="53px"
        android:text="你需要发送验证申请，等待对方同意"
        android:textColor="@color/black_word"
        android:textSize="@dimen/mid_padding"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="60px"
        android:background="@android:color/white">

        <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="填写验证内容"
            android:imeActionLabel="@string/action_go"
            android:imeOptions="actionGo"
            android:inputType="text"
            android:paddingLeft="@dimen/mid_padding"
            android:textSize="@dimen/mid_padding"/>


    </RelativeLayout>


</LinearLayout>
