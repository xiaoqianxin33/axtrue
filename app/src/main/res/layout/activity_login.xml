<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/registerbg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/back_login"
            style="@style/back_style"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linear_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/LinearLayout_input_vertical_height"
            android:layout_margin="@dimen/input_padding_left"
            android:background="@drawable/input_corners_bg"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/input_padding_left" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/EditText_vertical_height"
                android:paddingBottom="@dimen/EditText_vertical_top"
                android:paddingTop="@dimen/EditText_vertical_top" >

                <ImageView
                    android:id="@+id/pic_phone_login"
                    android:layout_width="@dimen/EditText_Pic_height_or_width"
                    android:layout_height="@dimen/EditText_Pic_height_or_width"
                    style="@style/editText_pic_login"
                    android:background="@mipmap/phone" />

                <EditText
                    android:id="@+id/phone_login"
                    style="@style/editText_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/EditText_height"

                    android:layout_toRightOf="@id/pic_phone_login"

                    android:hint="@string/input_phone"
                    android:maxLength="11"
                    android:numeric="integer"
                    android:phoneNumber="true"
                    >

                    <requestFocus />
                </EditText>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/view_margin_left"
                android:background="@color/grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/EditText_vertical_height"
                android:paddingBottom="@dimen/EditText_vertical_top"
                android:paddingTop="@dimen/EditText_vertical_top" >

                <ImageView
                    android:id="@+id/pic_password_login"
                    android:layout_width="@dimen/EditText_Pic_height_or_width"
                    android:layout_height="@dimen/EditText_Pic_height_or_width"
                    style="@style/editText_pic_login"
                    android:background="@mipmap/mima" />

                <EditText
                    android:id="@+id/password_login"
                    style="@style/editText_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/EditText_height"
                    android:layout_toRightOf="@id/pic_password_login"
                    android:hint="@string/input_password"
                    android:maxLength="16"
                    android:password="true"
 />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/forget_pwd_login"
            style="@style/TextSize_14_color_white"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/EditText_height"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginRight="@dimen/button_margin"
            android:gravity="center_vertical"
            android:text="@string/forget_password" />

        <Button
            android:id="@+id/btn_login_login"
            style="@style/TextSize_16_color_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/EditText_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/EditText_vertical_top"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginTop="@dimen/EditText_vertical_top"
            android:background="@drawable/login_corners_bg"
            android:gravity="center"
            android:text="@string/login" />

        <TextView
            android:id="@+id/disanfang_login"
            style="@style/TextSize_14_color_white"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/EditText_height"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginRight="@dimen/button_margin"
            android:gravity="center_vertical"
            android:text="@string/disanfangdenglu" />

        <!-- 第三方登陆 -->

        <RelativeLayout
            android:id="@+id/btnLogin_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/EditText_vertical_top"
            android:layout_marginLeft="@dimen/disanfang_pic_margin"
            android:layout_marginRight="@dimen/disanfang_pic_margin"
            android:layout_marginTop="@dimen/EditText_vertical_top"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/QQ_login"
                android:layout_width="@dimen/disanfang_pic_height"
                android:layout_alignParentLeft="true"
                android:layout_height="@dimen/disanfang_pic_height"
                android:layout_marginLeft="@dimen/pic_margin"
                android:layout_marginRight="@dimen/pic_margin"
                android:background="@mipmap/qqlogin" />
            <ImageView
                android:id="@+id/weixin_login"
                android:layout_width="@dimen/disanfang_pic_height"
                android:layout_centerHorizontal="true"
                android:layout_height="@dimen/disanfang_pic_height"
                android:layout_marginLeft="@dimen/pic_margin"
                android:layout_marginRight="@dimen/pic_margin"
                android:background="@mipmap/weixinlogin" />
            <ImageView
                android:id="@+id/weibo_login"
                android:layout_width="@dimen/disanfang_pic_height"
                android:layout_alignParentRight="true"
                android:layout_height="@dimen/disanfang_pic_height"
                android:layout_marginLeft="@dimen/pic_margin"
                android:layout_marginRight="@dimen/pic_margin"
                android:background="@mipmap/weibologin" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
