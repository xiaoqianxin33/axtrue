<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="150px">

        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="127px"
            android:background="@null"
            android:hint="标题"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="@dimen/mid_padding"
            android:textSize="@dimen/mid_padding"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/mid_padding"
            android:background="@color/line_color"/>

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:background="@null"
            android:gravity="top"
            android:hint="内容"
            android:inputType="text"
            android:maxLines="4"
            android:paddingLeft="@dimen/mid_padding"
            android:paddingRight="@dimen/mid_padding"
            android:paddingTop="@dimen/mid_padding"
            android:textSize="@dimen/mid_padding"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/mid_padding"
            android:background="@color/line_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mid_padding"
            android:layout_marginTop="@dimen/small_padding"
            android:text="图片"
            android:textColor="@color/black_word"
            android:textSize="@dimen/mid_padding"/>

        <cn.bingoogolapple.photopicker.widget.BGASortableNinePhotoLayout
            android:id="@+id/snpl_moment_add_photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mid_padding"
            android:background="@android:color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/small_padding"
            android:background="@color/line_color"/>


    </LinearLayout>
</ScrollView>