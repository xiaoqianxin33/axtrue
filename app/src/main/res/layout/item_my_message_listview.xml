<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:gravity="center"
        android:textColor="@color/black_word"
        android:textSize="22px"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240px"
        android:background="@android:color/white">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/roundedImageView"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginLeft="@dimen/mid_padding"
            android:layout_marginTop="28px"
            android:scaleType="centerCrop"
            app:riv_oval="true"/>


        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_padding"
            android:layout_marginRight="55px"
            android:layout_marginTop="40px"
            android:layout_toRightOf="@id/roundedImageView"
            android:lineSpacingExtra="5px"
            android:textColor="@color/black_word"
            android:textSize="26px"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="150px"
            android:layout_marginTop="150px"
            android:background="@color/line_color"/>

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="124px"
            android:layout_height="50px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/small_padding"
            android:layout_marginRight="@dimen/mid_padding"
            android:background="@drawable/my_message_btn_selector"
            android:textColor="@drawable/my_message_btn_text_selector"
            android:textSize="27px"/>

        <Button
            android:id="@+id/btn_reJudge"
            android:layout_width="158px"
            android:layout_height="50px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/small_padding"
            android:layout_marginRight="30px"
            android:layout_toLeftOf="@id/btn_ok"
            android:background="@drawable/btn_message_shape"
            android:text="申请重判"
            android:textColor="@color/orange"
            android:textSize="27px"/>


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"/>

</LinearLayout>