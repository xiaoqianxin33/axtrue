<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingBottom="30px">


    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_marginLeft="@dimen/mid_padding"
        android:layout_marginTop="@dimen/mid_padding"
        android:scaleType="centerCrop"
        android:src="@mipmap/placeholder"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_padding"
        android:layout_marginTop="39px"
        android:layout_toRightOf="@id/iv_image"
        android:textColor="@color/black_word"
        android:textSize="26px"/>

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="@dimen/small_padding"
        android:layout_marginTop="15px"
        android:layout_toRightOf="@id/iv_image"
        android:textColor="@color/shallow_word"
        android:textSize="24px"/>

    <TextView
        android:id="@+id/tv_payMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_description"
        android:layout_marginLeft="@dimen/small_padding"
        android:layout_marginTop="48px"
        android:layout_toRightOf="@id/iv_image"
        android:textColor="@color/orange"
        android:textSize="26px"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_description"
        android:layout_marginLeft="12px"
        android:layout_marginTop="48px"
        android:layout_toRightOf="@id/tv_payMoney"
        android:textColor="@color/shallow_word"
        android:textSize="21px"/>

    <TextView
        android:id="@+id/tv_Exchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/mid_padding"
        android:layout_marginTop="156px"
        android:textColor="#686868"
        android:textSize="20px"/>


</RelativeLayout>