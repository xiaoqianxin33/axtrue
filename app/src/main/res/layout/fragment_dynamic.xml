<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical"
              android:paddingBottom="120px"
              tools:context="com.chinalooke.yuwan.fragment.DynamicFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/actionbar_color">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="动态"
            android:textColor="@android:color/white"
            android:textSize="34px"/>

        <ImageView
            android:id="@+id/iv_camera"
            android:layout_width="46px"
            android:layout_height="38px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="32px"
            android:gravity="center_vertical"
            android:src="@mipmap/camera"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300px">

            <cn.bingoogolapple.bgabanner.BGABanner
                android:id="@+id/bgabanner"
                android:layout_width="match_parent"
                android:layout_height="300px"
                app:banner_pageChangeDuration="1000"
                app:banner_pointAutoPlayAble="true"
                app:banner_pointAutoPlayInterval="2000"
                app:banner_pointContainerBackground="@android:color/transparent"
                app:banner_pointDrawable="@drawable/bga_banner_selector_point_hollow"
                app:banner_pointTopBottomMargin="5dp"
                app:banner_transitionEffect="alpha"/>

            <ImageView
                android:id="@+id/iv_ad"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/mid_padding"
                android:layout_marginRight="@dimen/mid_padding"
                android:src="@mipmap/arrow_right_dynamic"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_new_message"
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:background="@android:color/white">


            <RelativeLayout
                android:layout_width="360px"
                android:layout_height="80px"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/disclosure_arrow">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv1"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12px"
                    android:background="#e3e6e8"
                    app:riv_corner_radius="8dp"/>

                <TextView
                    android:id="@+id/tv_new_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="63px"
                    android:layout_toRightOf="@id/iv1"
                    android:text="一条新消息"
                    android:textColor="@android:color/white"
                    android:textSize="30px"/>

            </RelativeLayout>


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"/>


        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/sr"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/lv_dynamic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/backgroud"
                    android:dividerHeight="16dp"/>

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tv_no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:visibility="gone"/>

            </FrameLayout>
        </android.support.v4.widget.SwipeRefreshLayout>

    </LinearLayout>

</LinearLayout>
