<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/backgroud"
              android:orientation="vertical"
              tools:context="com.chinalooke.yuwan.fragment.DynamicFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/EditText_vertical_height"
        android:background="@color/black"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_personal_info"
            android:layout_width="@dimen/EditText_vertical_height"
            android:layout_height="@dimen/EditText_vertical_height"
            android:padding="10dp"
            android:src="@drawable/add_dynamic_selector"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/EditText_height"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/dynamic"
            android:textColor="@color/white"
            android:textSize="@dimen/TextSize_18"
            />

        <TextView
            android:id="@+id/tiaoguo_personal_info"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/EditText_vertical_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="@string/with_me"
            android:textColor="@color/white"
            android:textSize="14sp"
            />
    </RelativeLayout>


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/sr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/lv_dynamic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/backgroud"
                android:dividerHeight="16dp"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="16sp"
                android:visibility="gone"/>

        </FrameLayout>


    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>
