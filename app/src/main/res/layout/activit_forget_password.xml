<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/EditText_vertical_height"
        android:background="@color/black"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_forget_password"
            android:layout_width="@dimen/EditText_vertical_height"
            android:layout_height="@dimen/EditText_vertical_height"
            android:padding="@dimen/back_padding"
            android:layout_centerVertical="true"
            style="@style/editText_pic_login"
            android:src="@mipmap/back" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/EditText_height"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/find_password_forget"
            android:textSize="@dimen/TextSize_18"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/liner_padding_personal_info"
        android:background="@color/white"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/liner_padding_personal_info" >

        <!--手机号-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/EditText_vertical_height"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/EditText_height"
                style="@style/Textview_personal_info"
                android:text="@string/phone_forget"
                />
            <EditText
                android:id="@+id/phone_forget_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/EditText_height"
                android:ems="11"
                android:numeric="integer"
                android:hint="@string/input_phone"
                android:inputType="text"
                style="@style/editText_personal_info"
                />
        </LinearLayout>
        <!--获取验证码-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/EditText_vertical_height"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/EditText_height"
                style="@style/Textview_personal_info"
                android:layout_gravity="center"
                android:text="@string/verification_code_forget"
                />
            <EditText
                android:id="@+id/verification_code_forget"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:numeric="integer"
                android:maxLength="4"
                android:hint="@string/input_verification_code"
                android:layout_gravity="center"
                android:layout_height="@dimen/EditText_height"
                style="@style/editText_personal_info"
                />
            <Button
                android:id="@+id/btn__get_verification_code_forget_password"
                style="@style/TextSize_14"
                android:layout_width="wrap_content"
                android:paddingLeft="@dimen/EditText_vertical_top"
                android:paddingRight="@dimen/EditText_vertical_top"
                android:layout_height="@dimen/EditText_height"

                android:layout_marginLeft="@dimen/EditText_vertical_top"
                android:layout_marginRight="@dimen/verification_code_button_margin"
                android:layout_alignParentRight="true"

                android:layout_marginTop="@dimen/EditText_vertical_top"
                android:background="@drawable/btn_get_verification_corners_bg"
                android:gravity="center"
                android:textColor="@color/orange"
                android:text="@string/get_verification_code" />
        </LinearLayout>


    </LinearLayout>
    <!--下一步-->
    <Button
        android:id="@+id/next_forget_password"
        style="@style/TextSize_16_color_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/EditText_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/EditText_vertical_top"
        android:layout_marginLeft="@dimen/button_margin"
        android:layout_marginRight="@dimen/button_margin"
        android:layout_marginTop="@dimen/EditText_vertical_top"
        android:background="@drawable/login_corners_bg"
        android:gravity="center"
        android:text="@string/next_forget" />
    </LinearLayout>
