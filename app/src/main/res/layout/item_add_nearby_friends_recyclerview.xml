<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:background="@android:color/white">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_head"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginLeft="@dimen/mid_padding"
        android:layout_marginTop="29px"
        android:scaleType="centerCrop"
        android:src="@mipmap/placeholder"
        app:riv_oval="true"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150px"
        android:layout_marginTop="40px"
        android:textColor="@color/black_word"
        android:textSize="@dimen/mid_padding"/>

    <TextView
        android:id="@+id/tv_slogen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150px"
        android:layout_marginTop="90px"
        android:textColor="#848787"
        android:textSize="26px"/>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="140px"
        android:layout_height="60px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/mid_padding"
        android:layout_marginTop="50px"
        android:background="@mipmap/orange_round_background"
        android:src="@mipmap/friend_check"
        android:text="添加"
        android:textColor="@android:color/white"
        android:textSize="@dimen/mid_padding"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="150px"
        android:layout_marginTop="150px"
        android:background="@color/line_color"/>
</RelativeLayout>