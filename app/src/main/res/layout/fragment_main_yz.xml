<com.chinalooke.yuwan.view.ViewGroupHook xmlns:android="http://schemas.android.com/apk/res/android"
                                         android:layout_width="match_parent"
                                         android:layout_height="match_parent">

    <com.chinalooke.yuwan.view.NoSlidingListView
        android:id="@+id/listview_yz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/background"
        android:dividerHeight="@dimen/small_padding"/>

    <ProgressBar
        android:id="@+id/pb_load_yz"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/progressbar"
        />

    <TextView
        android:id="@+id/tv_none_yz"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="暂无战场"/>
</com.chinalooke.yuwan.view.ViewGroupHook>
