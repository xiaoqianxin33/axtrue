<?xml version="1.0" encoding="utf-8"?>

<selector  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:color="@color/orange">
        <shape >
            <solid android:color="@color/orange" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:state_pressed="true" android:color="@color/orange_uncheck">
        <shape >
            <solid android:color="@color/orange_uncheck" />
            <corners android:radius="5dp" />
        </shape>
    </item>

</selector>